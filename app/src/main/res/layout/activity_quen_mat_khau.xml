<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FFF2F2"
    android:layout_height="match_parent"
    tools:context=".QuenMatKhauActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/header"
        android:padding="5dp"
        android:background="#FFF2F2"
        >
        <ImageButton
            android:layout_width="45dp"
            android:layout_height="35dp"
            android:id="@+id/account12"
            android:layout_marginTop="9dp"
            android:src="@drawable/baseline_arrow_back_32"
            android:background="#FFF2F2"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/batdaunao"
        app:layout_constraintTop_toBottomOf="@+id/header"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tvHeader"
            android:padding="15dp"
            android:fontFamily="@font/font1"
            android:layout_marginLeft="16dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Quên mật khẩu"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/tieude"
            android:fontFamily="@font/font1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="31dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvHeader"
            android:text="Vui lòng điền đúng thông tin"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:paddingBottom="15dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/batdaunao"
        tools:layout_editor_absoluteX="0dp">

        <EditText
            android:id="@+id/edEmailquenmatkhau"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/custom_edittext"
            android:drawableLeft="@drawable/email1"
            android:drawablePadding="12dp"
            android:fontFamily="@font/font1"
            android:hint="Email"
            android:textColor="@color/black"
            android:paddingLeft="16dp"
            android:textColorHint="#9E8C8C"
            android:textSize="25dp" />

